# ===========================================
# Django Accounts - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ===========================================
# Django Core Settings
# ===========================================

# Generate a new SECRET_KEY using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-new-one

# Set to False in production, True for development
DEBUG=False

# Comma-separated list of allowed hosts (e.g., yourdomain.com,*.parspack.app)
ALLOWED_HOSTS=yourdomain.com,*.parspack.app

# ===========================================
# Database Configuration
# ===========================================

# Development (SQLite):
# DATABASE_URL=sqlite:///db.sqlite3

# Production (PostgreSQL - Get credentials from Pars Pack):
DATABASE_URL=postgresql://username:password@host:port/dbname

# Example:
# DATABASE_URL=postgresql://user_12345:mypassword@pg-xxxxx.parspack.com:5432/accounts_db

# ===========================================
# Cache Configuration
# ===========================================

# Development (Local Redis):
# REDIS_URL=redis://localhost:6379/0

# Production (Pars Pack Redis):
REDIS_URL=redis://host:port/0

# If Redis has password:
# REDIS_URL=redis://:password@host:port/0

# Example:
# REDIS_URL=redis://redis-xxxxx.parspack.com:6379/0

# ===========================================
# SMS Configuration (Optional)
# ===========================================

# Get API key from https://panel.kavenegar.com/client/api/index
# If not set, OTP codes will be printed to console (DEBUG mode only)
KAVEHNEGAR_API_KEY=your-kavehnegar-api-key-here

# ===========================================
# Static and Media Files (Optional)
# ===========================================

# These are optional - defaults are configured in settings.py
# STATIC_URL=/static/
# STATIC_ROOT=/app/staticfiles
# MEDIA_URL=/media/
# MEDIA_ROOT=/app/mediafiles

# ===========================================
# Security Settings (Production Only)
# ===========================================

# Uncomment these for production deployment:
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# ===========================================
# CORS Settings (If using with frontend)
# ===========================================

# Comma-separated list of allowed origins for CORS
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# Email Configuration (Optional)
# ===========================================

# For sending emails (password reset, notifications, etc.)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# Logging Configuration (Optional)
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO
