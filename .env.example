# Django Settings
SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,*.parspack.app

# Database Configuration (Get from Pars Pack PostgreSQL service)
DATABASE_URL=postgresql://username:password@host:port/dbname

# Redis Configuration (Get from Pars Pack Redis service)
REDIS_URL=redis://host:port/0

# Kavehnegar SMS API (Optional - for sending OTP via SMS)
KAVEHNEGAR_API_KEY=your-kavehnegar-api-key-here

# Static and Media Files (Optional - defaults are set in settings.py)
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/mediafiles
